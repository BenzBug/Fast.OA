@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Fast OA| Login</title>
    <script type="text/javascript">
        if (window.parent.window != window) {
            window.top.location.href = "/UserLogin/Index";
        }
    </script>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link href="~/Content/AdminLTE/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/AdminLTE/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Content/AdminLTE/bower_components/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/AdminLTE/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/Content/AdminLTE/plugins/iCheck/square/blue.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <script type="text/javascript">
        $(function() {
            //验证码图片被点击的时候。改变一下
            $("#imgCode").click(changeCheckCode);
        });

        //改变当前图片的地址
        function changeCheckCode() {
            var old = $("#imgCode").attr("src");
            var now= new Date();
            var str = old +
                now.getDay() +
                now.getSeconds() +
                now.getMinutes();

            $("#imgCode").attr("src", str);
        }

        //登录成功之后执行此方法。
        function afterLogin(data) {
            if (data == "ok") {
                //登录成功
                window.location.href = "/Home/Index";
            } else {
                alert(data);
                changeCheckCode();
            }
        }
    </script>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a><b>Fast</b>OA</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">登 录</p>

            @using (Ajax.BeginForm("ProcessLogin", "UserLogin", new AjaxOptions() { OnSuccess = "afterLogin" }))
            {
                @*<form action="../../index2.html" method="post">*@
                    <div class="form-group has-feedback">
                        <input type="text" name="LoginCode" value="jack" id="LoginCode" class="login-text form-control" placeholder="text" />
                        @*<input type="email" class="form-control" placeholder="Email">*@
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" name="LoginPwd" id="LoginPwd" value="123" class="login-text form-control" placeholder="Password" />
                        @*<input type="password" class="form-control" placeholder="Password">*@
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>

                    <div class="form-group has-feedback" >
                        <div>
                            验证码：
                        </div>
                        <div>
                            <input type="text" name="vCode" id="code" value="" class="login-text form-control" placeholder="" style="float: left; width:100px;" />
                        </div>
                        <div style="margin-left: 115px; margin-top:5px">
                            <img id="imgCode" src="/UserLogin/ShowVCode?id=2" style="float: left; height: 24px; " />
                        </div>
                        <div style="margin-left: 175px; margin-top:7px">
                            <a href="javascript:void(0)" onclick="changeCheckCode();return false;">看不清，换一张</a>
                        </div>
                        <span class="form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label>
                                    <input type="checkbox"> 记住密码
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-4">
                            @*<input type="submit" id="btnLogin" value="登录" class="login-btn" />*@
                            <button type="submit" id="btnLogin" class="btn btn-primary btn-block btn-flat">登录</button>
                        </div>
                        <!-- /.col -->
                    </div>
                @*</form>*@
            }
            

            @*<div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                    <i class="fa fa-facebook"></i> Sign in using
                    Facebook
                </a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                    <i class="fa fa-google-plus"></i> Sign in using
                    Google+
                </a>
                </div
                <!-- /.social-auth-links -->

                <a href="#">I forgot my password</a><br>
                <a href="register.html" class="text-center">Register a new membership</a>*@

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Content/AdminLTE/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
</body>
</html>
