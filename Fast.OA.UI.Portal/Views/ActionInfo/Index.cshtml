
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @*<link href="~/Content/GoodTbStyle.css" rel="stylesheet" />*@
    <link href="~/Content/tableStyle.css" rel="stylesheet" />
    <link href="~/Content/jquery-easyui-1.8.3/themes/icon.css" rel="stylesheet" />
    <link href="~/Content/jquery-easyui-1.8.3/themes/default/easyui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/jquery-easyui-1.8.3/jquery.easyui.min.js"></script>
    <script src="~/Content/jquery-easyui-1.8.3/locale/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Theme/System/User/Fast.OA.Action.js"></script>
    <script>
        $(function () {
            ActionManager.Load();
        });
    </script>
</head>
<body>
    <div>
        权限名称：<input type="text" id="txtSchName" name="txtSchName" /><input type="button" id="btnSearch" value="搜索" />
    </div>
    <hr />
    @*当前页面放表格数据的地方*@
    <table id="tt" style="width: 700px;" title="标题，可以使用代码进行初始化，也可以使用这种属性的方式" iconcls="icon-edit"></table>
    <!----------------弹出来的【添加】的对话框- 开始------------>
    <div id="addDialogDiv">
        @using (Ajax.BeginForm("Add", "ActionInfo", new AjaxOptions() { OnSuccess = "ActionManager.afterAdd" }))
        {
            <table class="t1">
                <tr>
                    <td>权限名称：</td>
                    <td><input type="text" name="ActionName"></td>
                </tr>
                <tr>
                    <td>URL：</td>
                    <td><input type="text" name="Url"></td>
                </tr>
                <tr>
                    <td>Http方法类型：</td>
                    <td>
                        <select name="HttpMethd">
                            <option value="POST">POST</option>
                            <option value="GET">GET</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>是否菜单：</td>
                    <td><input type="checkbox" id="ckbIsMenu" value="true" name="IsMenu"></td>
                </tr>
                <tr id="trIconUrl">
                    <td>菜单的图标地址：</td>
                    <td>
                        <input type="hidden" id="MenuIcon" name="MenuIcon">
                        <input type="file" id="fileMenuIcon" name="fileMenuIcon" />
                        <input type="button" id="btnUploadFile" value="上传" />
                        <div id="uploadImg">

                        </div>
                    </td>

                </tr>
                <tr>
                    <td>排序：</td>
                    <td><input type="text" name="Sort"></td>
                </tr>
                <tr>
                    <td>备注：</td>
                    <td><input type="text" name="remark"></td>
                </tr>
            </table>
        }
    </div>
    <!----------------弹出来的【添加】的 对话框- 结束------------>
    <!----------------弹出来的【修改】的对话框- 开始------------>
    <div id="editDialogDiv">
        <iframe id="editFrame" src="javascript:void(0)" frameborder="0" width="100%" height="100%" scrolling="no"></iframe>
    </div>
    <!----------------弹出来的【修改】的 对话框- 结束------------>


</body>
</html>